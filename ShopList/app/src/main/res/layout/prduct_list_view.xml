<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
            android:paddingBottom="50dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            app:cardUseCompatPadding="true"
            android:elevation="15dp" tools:ignore="MissingConstraints">

    <LinearLayout
            android:layout_width="fill_parent"
                                                  android:layout_height="fill_parent"
                                                  android:paddingTop="10dp"
                                                  android:orientation="vertical" tools:layout_editor_absoluteY="4dp"
                                                  tools:layout_editor_absoluteX="0dp">



        <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="20dp">

            <ImageView android:layout_width="match_parent"
                       android:id="@+id/iv_productImage"
                       android:layout_height="250dp"
                       android:scaleType="centerCrop"
                       android:contentDescription="@string/prodImage"
                       android:layout_gravity="end"/>
        </androidx.cardview.widget.CardView>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/tv_productName"
                  android:layout_height="wrap_content"
                  android:text="@string/placeHolder"
                  android:layout_marginEnd="10dp"
                  android:textSize="20sp"
                  android:paddingTop="10dp"
                  android:layout_marginStart="20dp"
        />


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_productDescription"
                  android:text="@string/placeHolder"
                  android:textSize="15sp"
                  android:paddingTop="10dp"
                  android:layout_marginEnd="10dp"
                  android:layout_marginStart="20dp"
        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingBottom="10dp"
                      android:layout_marginStart="20dp"
                      android:layout_marginEnd="10dp">


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv_productValues"
                      android:text="@string/placeHolder"
                      android:layout_gravity="center_vertical"
                      android:textSize="12sp"
                      android:paddingTop="10dp"/>

            <Space android:layout_width="0dp" android:layout_height="0dp"
                   android:layout_weight="1">

            </Space>

            <Button android:layout_width="90dp"
                    android:id="@+id/btn_productAddPrice"
                    android:background="@drawable/button"
                    android:layout_height="50dp"
                    android:textSize="12sp"
                    android:layout_marginTop= "15dp"
                    android:text="@string/placeHolder"
                    android:textColor="@color/white"
            />

        </LinearLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>